<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <!--控制台Trace Appender -->
    <appender name="TraceConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date：%-5level - %message%newline" />
      </layout>
    </appender>
    
    <!--控制台Error Appender -->
    <appender name="ErrorConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date：%-5level - %message%newline" />
      </layout>
    </appender>
    
    <!--文件Trace Appender -->
    <appender name="TraceLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\TraceLogs\Log_"/>
      <appenderToFile  value="true"/>
      <rollingstyle value="Date"/>
      <datePattern value="yyyyMMdd'.txt'"/>
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="--------------- 上海精测半导体技术有限公司 TRACE LOG START -----------------------&#13;&#10;" />
        <Footer value="--------------- 上海精测半导体技术有限公司 TRACE LOG CLOSE -----------------------&#13;&#10;" />
        <ConversionPattern value="%date：%-5level - %message%newline" />
      </layout>
    </appender>
    
    <!--文件Error Appender -->
    <appender name="ErrorLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\ErrorLogs\Log_" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMMdd'.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <header value="--------------- 上海精测半导体技术有限公司 ERROR LOG START -----------------------&#13;&#10;" />
        <Footer value="--------------- 上海精测半导体技术有限公司 ERROR LOG CLOSE -----------------------&#13;&#10;" />
        <ConversionPattern value="%date：%-5level - %message%newline" />
      </layout>
    </appender>

    <logger name="TraceLog">
      <level value="ALL"/>
      <appender-ref ref="TraceLogFileAppender"/>
      <appender-ref ref="TraceConsoleAppender"/>
    </logger>

    <logger name="ErrorLog">
      <level value="ALL"/>
      <appender-ref ref="ErrorConsoleAppender"/>
      <appender-ref ref="ErrorLogFileAppender"/>
    </logger>
    
  </log4net>
</configuration>
